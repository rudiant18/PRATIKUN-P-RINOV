<?php
$nilai = 95; // example score

if ($nilai >= 90) {
    $grade = 'A';
    $keterangan = 'Baik Sekali';
} elseif ($nilai >= 76) {
    $grade = 'B';
    $keterangan = 'Baik';
} elseif ($nilai >= 60) {
    $grade = 'C';
    $keterangan = 'Cukup';
} elseif ($nilai >= 50) {
    $grade = 'D';
    $keterangan = 'Hampir Cukup';
} else {
    $grade = 'E';
    $keterangan = 'Kurang';
}

echo "Nilai $nilai memiliki grade $grade dengan keterangan $keterangan.";
?>
